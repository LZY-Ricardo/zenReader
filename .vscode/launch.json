{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Zen Reader Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "pnpm: watch"
    }
  ]
}
