{
  "name": "zen-reader",
  "displayName": "Zen Reader",
  "description": "A minimalist TXT novel reader for VS Code. Import your local TXT files and enjoy reading with chapter navigation, bookmarks, and dual reading modes (paged/scroll).",
  "version": "0.0.1",
  "publisher": "zenreader",
  "icon": "media/book.png",
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "reader",
    "novel",
    "txt",
    "book",
    "reading",
    "chinese"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/zen-reader"
  },
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished",
    "onView:zenReader.reader",
    "onCommand:zenReader.focus",
    "onCommand:zenReader.importTxt",
    "onCommand:zenReader.openInEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zenReader",
          "title": "Zen Reader",
          "icon": "media/book.png"
        }
      ]
    },
    "views": {
      "zenReader": [
        {
          "id": "zenReader.reader",
          "name": "Reader",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "zenReader.focus",
        "title": "Zen Reader: Focus"
      },
      {
        "command": "zenReader.importTxt",
        "title": "Zen Reader: Import TXT"
      },
      {
        "command": "zenReader.openInEditor",
        "title": "Zen Reader: Open In Editor"
      },
      {
        "command": "zenReader.toggle",
        "title": "Zen Reader: Toggle Panel"
      }
    ],
    "keybindings": [
      {
        "command": "zenReader.toggle",
        "key": "ctrl+shift+z",
        "mac": "cmd+shift+z"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.6.3"
  }
}
